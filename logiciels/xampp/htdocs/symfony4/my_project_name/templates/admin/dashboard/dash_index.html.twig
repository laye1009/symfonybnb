{% extends 'admin/admin_base.html.twig' %}

{% block title %} Tableau de bord {% endblock %}

{% block body %}
<div class="container-fluid">   
    <div class="row">
        <div class="col">
            <div class="card bg-primary text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-users fa-3x"></i>

                        </div>
                        <div class="col-8">
                            <h4 class="card-title"> {#{{ stats.users }}#}</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card bg-success text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-hotel fa-3x"></i>

                        </div>
                        <div class="col-8">
                            {#<h4 class="card-title"> {{stats.bookings }} #}</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card bg-warning text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-comment fa-3x"></i>

                        </div>
                        <div class="col-8">
                            {#<h4 class="card-title"> {{stats.comments}}</h4>#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr>

    <div class="row">  
        <div class="col">
            <div class="alert alert-success">
                <h2 class="aler-heading my-3"> Les annonces populaires </h2>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Annonces </th>
                            <th>Proprio</th>
                            <th>Moyenne</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for ad in bestAds %}
                            <tr>
                                <td>{{ad.title}}</td>
                                <td>
                                    <img src="{{ad.picture}}">{{ad.firstName}} {{ad.lastName}}
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-dark">
                                        {{ad.note | number_format(1,","," ")}}
                                    </span>

                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>

    </div>

</div>
{% endblock %}
