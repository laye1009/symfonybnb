{% extends 'base.html.twig' %}

{% block title %} Page de {{user.firstName}} {% endblock %}

{% block body %}
<div class="container">
    <div class="row align-items-center">
        <div class="col-3 text-center">
            <img src="{{user.picture}}" class="avatar" alt="Avatar de {{user.firstName}}">
            <br>
            <span class="badge badge-primary">{{user.ads | length}} annonces </span>
 
        </div>
        <div class="col-9">
            <h1>{{user.fullName}}</h1>
            {% if user is same as(app.user) %}
                <div class="mt-3">
                    <a href="{{path('account_profile')}}" class="btn btn-primary mr-2 mb-2"> Modifier mes infos</a>
                    <a href="{{path('account_pwd')}}" class="btn btn-primary mr-2 mb-2"> Modifier mon mot de passe </a>
                </div>
            {% endif %}
        </div>
    </div>
    {{user.description  | raw }}

    <hr>
    <h2> Les annonces</h2>
    {% if user.ads | length >0 %}
        
        {% for ad in ads %}
        {% include 'ad/_ad.html.twig' %}

        {% endfor %}

    {% else %}
        <div class="alert alert-warning">
            <p>
                <strong> {{user.firstName}}</strong>
            </p>
        </div>

    {% endif %}
</div>
{% endblock %}
